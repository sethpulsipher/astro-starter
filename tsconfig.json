{
  "extends": "astro/tsconfigs/base",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "strictNullChecks": true, // necessary for Astro content collections
    "checkJs": false, // set to true if you want strict checks on .js files
    "baseUrl": ".",
    // creates shortcuts for imports
    "paths": {
      "@layouts/*": ["src/layouts/*"],
      "@assets/*": ["src/assets/*"],
      "@data/*": ["src/data/*"],
      "@styles/*": ["src/styles/*"],
      "@components/*": ["src/components/*"],
      "@js/*": ["src/js/*"]
    },
    "ignoreDeprecations": "6.0",
    "incremental": true,
    "skipLibCheck": true
  }
}
